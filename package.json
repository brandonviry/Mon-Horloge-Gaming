{
  "name": "mon-horloge-electron",
  "version": "1.0.0",
  "description": "Horloge Gaming en Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.virybrandon.monhorloge",
    "productName": "Mon Horloge Gaming",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^23.6.0"
  }
}
